{
  "collectionName": "jobs",
  "info": {
    "name": "Jobs",
    "description": "Jobs collect all currently open job positions"
  },
  "options": {
    "draftAndPublish": false,
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "team": {
      "type": "string",
      "required": true
    },
    "schedule": {
      "type": "string",
      "required": true
    },
    "applyAction": {
      "type": "component",
      "repeatable": false,
      "component": "links.button"
    },
    "description": {
      "type": "richtext"
    },
    "document": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["files"],
      "plugin": "upload",
      "required": false
    }
  }
}
