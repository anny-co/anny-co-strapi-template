{
  "kind": "collectionType",
  "collectionName": "footers",
  "info": {
    "name": "Footers",
    "description": "Footers contains instances of footers such that we can exchange what footer is used on specific pages"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "label": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "footnote": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "spanFlexbox": {
      "type": "boolean",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "columns": {
      "type": "component",
      "repeatable": true,
      "component": "elements.footer-column",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "links.social-media-link",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "theme": {
      "type": "component",
      "repeatable": false,
      "component": "layout.footer-theme",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}
