      "type": "richtext"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "elements.column-feature"
    },
    "subFeatureTitle": {
      "type": "string"
    },
    "subFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "elements.sub-feature"
    },
    "theme": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-theme"
    }
  }
}
