{
  "collectionName": "components_sections_feature_row_groups",
  "info": {
    "name": "FeatureRowGroup",
    "icon": "window-maximize",
    "description": "A FeatureGroupRow holds a title, a description and a set of RowFeatures"
  },
  "options": {},
  "attributes": {
    "anchor": {
      "type": "string",
      "default": ""
    },
    "label": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "elements.row-feature"
    },
    "subFeatureTitle": {
      "type": "string"
    },
    "subFeatures": {
      "type": "component",
      "repeatable": true,
      "component": "elements.sub-feature"
    },
    "theme": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-theme"
    }
  }
}
