{
  "collectionName": "components_elements_testimonials",
  "info": {
    "name": "Testimonial",
    "icon": "user-check",
    "description": "A Testimonial contains a quote of an Author and a logo of the company the author represents, as well as an optional link to said company"
  },
  "options": {},
  "attributes": {
    "logo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "text": {
      "type": "text"
    },
    "authorName": {
      "type": "string"
    },
    "authorTitle": {
      "type": "string"
    },
    "link": {
      "type": "component",
      "repeatable": false,
      "component": "links.link"
    }
  }
}
